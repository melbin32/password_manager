<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.password_manager.HelloController">
   <top>
       <AnchorPane prefHeight="125" prefWidth="300" style="-fx-background-color: #201E20;" BorderPane.alignment="CENTER">
           <children>
               <VBox alignment="CENTER" prefHeight="121.0" prefWidth="300.0" spacing="10.0">
                   <children>
                       <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="C.A.M.P.">
                           <font>
                               <Font size="26.0" />
                           </font>
                       </Text>
                       <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Computer Assisted Management of Password" textAlignment="CENTER" />
                   </children>
               </VBox>
           </children>

       </AnchorPane>
   </top>
    <bottom>
        <AnchorPane  prefHeight="275.0" prefWidth="300" style="-fx-background-color: #C7D3D4FF;" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" layoutX="70.0" layoutY="30.0" prefHeight="243.0" prefWidth="160.0" spacing="30.0">
                    <children>
                        <TextField  fx:id="usernamefield"  prefWidth="160.0" promptText="Username" />
                        <PasswordField fx:id="passwordfield"  promptText="Password" />
                        <Button fx:id="loginbutton"  prefHeight="27.0" prefWidth="160.0" style="-fx-background-color: #C92D39;" text="Log in" textFill="WHITE" />

                        <Button style="-fx-background-color: #ffffff;" text="New user? Register" />
                    </children>
                </VBox>
            </children>


        </AnchorPane>
    </bottom>
